## WEB SPECIFIC SETTINGS
document_root: /
index_list: [index.html, index.php]
 
## GENERAL SETTINGS
shared_writable_dirs:
    - cache
    - cache/media
    - cache/template
    - images/avatars
    
url_rewrites:
    - ^images/([^.]*)-min.css core/lib/min/index.php?g=$1&t=css
    - ^scripts/([^.]*)-min.js core/lib/min/index.php?g=$1&t=js
    - ^themes/([^/]*)/(.*\.css) core/lib/min/index.php?b=themes/$1&f=$2
    - ^themes/([^/]*)/(.*\.js) core/lib/min/index.php?b=themes/$1&f=$2
    - ^modules/([^/]*)/styles/(.*\.css) core/lib/min/index.php?b=modules/$1/styles&f=$2
    - ^(admin|mod|user)/([^/]*)/([^.]*)(.*) control.php?__mode=$1&__module=$2&__action=$3&__extra=$4
    - ^(admin|mod|user)($|/) control.php?__mode=$1
    - ^modules/([^/]*)/([^.]*)(.*) modules.php?__module=$1&__action=$2&__extra=$3
    - ^modules($|/) modules.php
    
permissions:
    /cache:
        - all: deny
        
## PHP SPECIFIC SETTINGS
php_version: 5.3.5
php_extensions:
    - mysql
    - mysqli
    - mcrypt
    - mbstring
    - gd2
php_error_reporting: 'E_ALL'
magic_quotes_gpc: Off
php_display_errors: On
php_short_open_tag: Off
php_default_mimetype: text/html
php_date_timezone: US/central
php_max_execution_time: 60
php_max_input_time: 60
php_post_max_size: 8M
php_file_uploads: On
php_upload_max_filesize: 2M
php_max_file_uploads: 20